@model CFarma_TemplateN.Models.Usuario
@{
    ViewData["Title"] = "Inicio Sesión";
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    @*Font Awesome*@
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
          rel="stylesheet" />
    @*Google Fonts*@
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    @*MDB*@
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.3.0/mdb.min.css"
          rel="stylesheet" />
</head>

@{
    if (@TempData["error"] != null)
    {
        <div class="col-sm-6">
            <div class="alert alert-danger" role="alert">
                @TempData["error"]
            </div>
        </div>
    }
}

<center>
    <div class="container">
        <div class="card" style="width: 40rem; height: 30rem; background: #D7DBDD;">

            <br />
            <br />
            <div>
                <img src="~/img/logo.jpg" width="200" height="160" onerror="src='/img/sinImagen.jpg'" />
            </div>
            <br><br />
            <form asp-action="Logueo" asp-controller="Home">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row mb-2">
                    <div class="form-group col-md-6">
                        <label asp-for="Correo" class="font-weight-bold">Correo Electronico<span class="text-danger">*</span></label>
                        <input asp-for="Correo" type="email" class="form-control" placeholder="Ingresa tu correo electronico">
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="Pswd" class="font-weight-bold">Contraseña<span class="text-danger">*</span></label>
                        <input asp-for="Pswd" type="password" class="form-control" placeholder="Ingresa tu contraseña">
                        <span asp-validation-for="Pswd" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div style="margin-right:auto;">
                    <center><button type="submit" class="btn btn-primary">Ingresar</button></center>
                </div>

            </form>
        </div>
    </div>
</center>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>


