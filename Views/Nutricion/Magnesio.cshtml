<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    @*Font Awesome*@
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
          rel="stylesheet" />
    @*Google Fonts*@
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    @*MDB*@
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.3.0/mdb.min.css"
          rel="stylesheet" />
</head>
<div class="p-5 text-center">
    <h3 class="align-content-center">

        <img src="~/img/vitaminass.jpg" width="50" height="50" />
        Nutrición>Minerales> <b>Magnesio</b>
        <img src="~/img/vitaminass.jpg" width="50" height="50" />
    </h3>
    @foreach (var item in ViewData["listaTipo"] as List<Producto>)
    {

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Imagen</th>
                    <th scope="col">Producto</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Accion</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <img src="/img/NUTRICION/@item.imagen"
                             width="150" height="120" onerror="src='/img/sinImagen.jpg'" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Stock)
                    </td>
                    <td>
                        @Html.ActionLink("Agregar al carrito", "Add", "Carrito", new { id_producto = item.idpt })
                    </td>
                </tr>
            </tbody>
        </table>


    }
</div>
