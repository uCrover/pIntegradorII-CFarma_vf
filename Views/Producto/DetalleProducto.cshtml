@{
    ViewData["Title"] = "Detalle Producto";
}

<!DOCTYPE html>
<html lang="es-pe">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    @*Font Awesome*@
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
          rel="stylesheet" />
    @*Google Fonts*@
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    @*MDB*@
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.3.0/mdb.min.css"
          rel="stylesheet" />
</head>
<body>

    <br>

    <div class="card" style="width: 80rem">
        <center>
            <table cellspacing="2" width="1050">
                <tr>
                    <td rowspan="5"> <img src="~/img/PRODUCTOS/@ViewData["imaProdc"] " width="500" height="300" /> </td>
                    <td rowspan="5" width="50"></td>
                    <td>
                        <h2 class="text-black-50">@ViewData["nomProdc"]</h2>
                    </td>
                </tr>
                <tr>
                    <td>
                        <ul>
                            <li type="circle"> <h4> @ViewData["desc1Prodc"] </h4> </li>
                        </ul>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h5> Disponibles @ViewData["stockProdc"] unidades </h5>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h2> S/ @ViewData["precProdc"] </h2>
                    </td>
                </tr>
                <tr>
                    <!--stockProdc
                    idProdc
                    -->
                    <td>

                        @{
                            if ((int)ViewData["stockProdc"] == 0)
                            {
                                <button type="button" width="100%" class=" btn btn-info">  <a onclick="alerta()"> Agregar al carrito</a> </button>
                            }
                            else
                            {
                                <button type="submit" class=" btn btn-info"> @Html.ActionLink("Agregar al carrito", "Add", "Carrito", new { id_producto = (int)ViewData["idProdc"] }) </button>



                            }
                        }

                    </td>



                </tr>
            </table>
        </center>
        <br>
    </div>

    <br>

    <script type="text/javascript">

        function alerta(nom) {
            swal({
                title: "Sin stock",
                text: "El producto seleccionado no cuenta con stock disponible",
                icon: "warning",
            })
        }

    </script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
</body>
</html>
