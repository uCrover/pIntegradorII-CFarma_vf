
@model CFarma_TemplateN.Models.Administrador

@{
    ViewData["Title"] = "Añadir Administrador";
}

<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="preconnect" href="https://fonts.gstatic.com">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link href="~/css/styleRegistro.css" rel="stylesheet" />

</head>


<body class="bg-cabeceraRegistro">

    <div class="container col-md-4">

        <!-- d-flex para que esté centrado verticalmente-->

        <h3 class="text-center font-weight-ligh" style="font-family:Cambria ; color:brown">
            Registrar Administrador <i class="fas fa-fw fa-user-shield"></i>
        </h3><br /><br />

        <form asp-controller="Administrador" asp-action="AddAdmi">
            <div>
                <label asp-for="nomad" class="control-label"></label>
                <input asp-for="nomad" class=" form-control" />
                <span asp-validation-for="nomad" class="text-danger"></span>
            </div>
            <br />

            <div>
                <label asp-for="correo" class="control-label"></label>
                <input asp-for="correo" class=" form-control" />
                <span asp-validation-for="correo" class="text-danger"></span>
            </div>
            <br />
            <div>
                <label asp-for="pswd" class="control-label"></label>
                <input type="password" asp-for="pswd" class=" form-control" />
                <span asp-validation-for="pswd" class="text-danger"></span>
            </div>
            <br />

            <div style="text-align:center;">
                <button type="submit" class="btn btn-outline-primary">Registrar</button>
            </div>


        </form>

   </div>


    <!-- Optional JavaScript; choose one of the two! -->
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>


</body>
</html>