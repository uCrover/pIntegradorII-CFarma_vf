@model CFarma_TemplateN.Models.Turno

@{
    ViewData["Title"] = "Turnos - Asignar";
}
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>



<!-- d-flex para que esté centrado verticalmente-->

<h3 class="text-center font-weight-ligh" style="font-family:Cambria ; color:brown">
    Asignar Turno <i class="far fa-calendar-plus"></i>
</h3>
<br />
<h6 class="text-center font-weight-ligh" style="font-family:Candara ; color:black">
    Considere los siguientes códigos para el ID Horarios
</h6>
<div class="container col-md-3">

    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col" class="text-center">ID Horario</th>
                <th scope="col" class="text-center">Día</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in ViewData["lisHorario"] as List<Horario>)
            {
                <tr>
                    <td class="text-center">@item.idhorario</td>
                    <td class="text-center">@item.nombre</td>
                </tr>
            }

        </tbody>
    </table>
</div>

<div class="container col-md-3">
    <form asp-controller="Administrador" asp-action="AddTurno">
        <div>
            <label class="control-label">Ingrese ID Horario</label>
            <input asp-for="idhorario" class=" form-control" />
            <span asp-validation-for="idhorario" class="text-danger"></span>
        </div>
        <br />
        <div>
            <label class="control-label">Ingrese código de Repartidor</label>
            <input asp-for="codrep" class=" form-control" />
            <span asp-validation-for="codrep" class="text-danger"></span>
        </div>
        <br />
        <br />
        <div style="text-align:center;">
            <button type="submit" class="btn btn-outline-primary">
                <i class="fas fa-plus-circle"></i> Añadir
            </button>
        </div>
        <br />


    </form>

</div>


